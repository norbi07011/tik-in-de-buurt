# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration with retry and fallback
DATABASE_URL=
DB_ENABLED=true
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY_MS=1500

# Database Features
DB_AUTO_SEED=false
DB_AUTO_INDEX=true

# MongoDB Atlas Configuration (Optional - for cloud deployment)
# ATLAS_CLUSTER_NAME=your-cluster-name
# ATLAS_DB_USERNAME=your-db-username  
# ATLAS_DB_PASSWORD=your-db-password
# Alternative Atlas connection string:
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/tik-in-de-buurt

# Frontend Configuration  
FRONTEND_URL=http://127.0.0.1:3001
CORS_ORIGIN=http://127.0.0.1:3001

# File Upload Configuration
UPLOAD_DIR=uploads

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_ENABLED=false  # Set to true when configuring real SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM_NAME=Tik in de Buurt
EMAIL_FROM_EMAIL=noreply@tikindebuurt.com

# For development: EMAIL_ENABLED=false will use mock email service
# For production: Configure real SMTP credentials and set EMAIL_ENABLED=true

# SMS/Twilio Configuration
SMS_ENABLED=false  # Set to true when configuring Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+31123456789

# For development: SMS_ENABLED=false will use mock SMS service
# For production: Configure Twilio credentials and set SMS_ENABLED=true
# Get credentials from: https://console.twilio.com/

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_basic_yearly
STRIPE_PRO_PRICE_ID=price_pro_yearly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_yearly